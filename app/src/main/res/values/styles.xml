<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Onboarding" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Onboarding Text Styles-->
    <style name="OnboardingText">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/onboardingTextColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OnboardingText.Top" parent="OnboardingText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="OnboardingText.Bottom" parent="OnboardingText">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

</resources>
